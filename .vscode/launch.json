    {
      "type": "java",
      "name": "Debug (Launch) - Current File",
      "request": "launch",
      "mainClass": "${file}",
      "vmArgs": "-XstartOnFirstThread"
    },
    {
      "type": "java",
      "name": "Debug (Launch)-App<ogengine3d>",
      "request": "launch",
      "mainClass": "org.ogengine3d.App",
      "projectName": "ogengine3d"
    },
    {
      "type": "java",
      "name": "Debug (Launch)-MainGameLoop<ogengine3d>",
      "request": "launch",
      "mainClass": "org.ogengine3d.MainGameLoop",
      "projectName": "ogengine3d"
    }
  ]
